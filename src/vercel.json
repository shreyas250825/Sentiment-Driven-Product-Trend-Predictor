{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "outputDirectory": "build",
  "env": {
    "REACT_APP_API_BASE_URL": "https://sentiment-driven-product-trend-predictor.onrender.com/api"
  }
}
